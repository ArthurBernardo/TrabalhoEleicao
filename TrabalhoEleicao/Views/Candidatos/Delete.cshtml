@model TrabalhoEleicao.Entities.Models.Candidato

@{
    ViewBag.Title = "Delete";
}




<body style="background-color: rgb(159 89 99)">
    <h1 style="text-align: center; color: #acbad0; font-family:Rockwell"><strong>Deletar Candidato</strong></h1>
    <div class="form-horizontal">
        <div class="panel-body">
            <div>
                <h4>Tem certeza de que deseja deletar este candidato?</h4>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        <label>Nome:</label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Nome)
                    </dd>

                    <dt>
                        <label>Email:</label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Email)
                    </dd>

                    <dt>
                        <label>Data de Nascimento:</label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.DataNascimento)
                    </dd>

                    <dt>
                        <label>Tipo Candidato:</label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TipoCandidato)
                    </dd>
                    <dt>
                        <label>Partido:</label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Partido)
                    </dd>
                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label class="col-md-2 control-label" for="Cadastrar"></label>
                        <div class="col-md-8">
                            <button class="btn btn-danger" style="width:30%;" type="Reset" onclick="window.location.href = '/Candidatos/Index'">Voltar</button>
                            <input type="submit" value="Deletar" class="btn btn-success" style="width:30%;" />
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label" for="Cadastrar"></label>
            <div class="col-md-8">
                <button id="Cancelar" name="Cancelar" class="btn btn-default" style="width:15%; margin-left: 100%;" type="Reset" onclick="window.location.href = '/Home/Index'">Sair</button>
            </div>
        </div>
    </div>
</body>

    <style>
        .panel-body {
            background-color: #acbad0;
            margin: 100px;
            border: inherit;
            border-radius: 10px;
            width: 50%;
            margin-left: 25%;
            margin-top: 6%;
        }
    </style>

