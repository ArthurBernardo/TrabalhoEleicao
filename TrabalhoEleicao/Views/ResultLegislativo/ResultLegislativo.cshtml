                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Partido)
                                                </td>
                                                <td style="text-align: left;">
                                                    @Html.DisplayFor(modelItem => item.QtdVotosRecebidos)
                                                </td>
                                            </tr>
                                        }

                                    }

                                }
                            </table>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="Cadastrar"></label>
                            <div class="col-md-8">
                                <button class="btn btn-danger" style="width: 10%; margin-left: 110%;" type="Reset" onclick="window.location.href = '/Eleicao/Index'">Voltar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </fieldset>
</body>

